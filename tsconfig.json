{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "strict": true,
    "outDir": "lib",
    "target": "es2017",
    "sourceMap": true,
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true
  }
}
